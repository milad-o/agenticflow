# =============================================================================
# AgenticFlow Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real API keys to version control!

# =============================================================================
# LLM Provider API Keys (Required for respective providers)
# =============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Groq API Key (for high-speed inference)
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# Azure OpenAI Configuration (for enterprise deployments)
# Get from: Azure Portal -> Azure OpenAI Service
AZURE_OPENAI_API_KEY=your-azure-openai-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01

# HuggingFace API Key (for embeddings and models)
# Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# =============================================================================
# Vector Store Configuration (Optional - for vector memory and RAG)
# =============================================================================

# Pinecone Configuration
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=agenticflow-index

# Qdrant Configuration (if using Qdrant Cloud)
# Get from: https://cloud.qdrant.io/
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_URL=https://your-cluster.qdrant.io

# =============================================================================
# Database Configuration (Optional - for persistent memory)
# =============================================================================

# PostgreSQL Database (for enterprise memory backend)
DATABASE_URL=postgresql://username:password@localhost:5432/agenticflow
# Or individual components:
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agenticflow
POSTGRES_USER=agenticflow_user
POSTGRES_PASSWORD=secure_password

# SQLite Database (for local persistent memory)
SQLITE_DATABASE_PATH=./agenticflow_memory.db

# =============================================================================
# AgenticFlow Configuration (Optional - framework settings)
# =============================================================================

# Debug and Logging
AGENTICFLOW_DEBUG=false
AGENTICFLOW_LOG_LEVEL=info

# Performance Settings
AGENTICFLOW_MAX_CONCURRENT_TASKS=4
AGENTICFLOW_DEFAULT_TIMEOUT=30
AGENTICFLOW_MAX_RETRIES=3

# Memory Settings
AGENTICFLOW_DEFAULT_MEMORY_TYPE=buffer
AGENTICFLOW_MAX_MESSAGES=100

# Tool and MCP Settings
AGENTICFLOW_MCP_STARTUP_TIMEOUT=60
AGENTICFLOW_MCP_AUTO_REGISTER=true
AGENTICFLOW_TOOL_NAMESPACE=true

# =============================================================================
# Ollama Configuration (Optional - for local model deployment)
# =============================================================================

# Ollama Server URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Default Ollama Models (customize as needed)
OLLAMA_DEFAULT_MODEL=qwen2.5:7b
OLLAMA_EMBEDDING_MODEL=granite3.2:8b

# =============================================================================
# External Service Configuration (Optional)
# =============================================================================

# Web Search API (for web search tools)
SERPAPI_API_KEY=your-serpapi-key-here
TAVILY_API_KEY=your-tavily-api-key-here

# Other API Keys (customize based on your tools)
WEATHER_API_KEY=your-weather-api-key-here
NEWS_API_KEY=your-news-api-key-here

# =============================================================================
# Development and Testing (Optional)
# =============================================================================

# Test Configuration
AGENTICFLOW_TEST_MODE=false
AGENTICFLOW_TEST_SKIP_SLOW=false

# Example Configurations
AGENTICFLOW_EXAMPLES_DATA_PATH=./examples/data
AGENTICFLOW_EXAMPLES_OUTPUT_PATH=./examples/output

# =============================================================================
# Production Deployment (Optional)
# =============================================================================

# Monitoring and Observability
AGENTICFLOW_ENABLE_METRICS=true
AGENTICFLOW_METRICS_PORT=8080
AGENTICFLOW_HEALTH_CHECK_INTERVAL=30

# Security
AGENTICFLOW_API_KEY_ENCRYPTION=true
AGENTICFLOW_SECURE_COMMUNICATION=true

# =============================================================================
# Docker and Container Configuration (Optional)
# =============================================================================

# Docker-specific settings
AGENTICFLOW_CONTAINER_MODE=false
AGENTICFLOW_WORKER_REPLICAS=3

# =============================================================================
# Environment-Specific Overrides
# =============================================================================

# Environment indicator (development, staging, production)
ENVIRONMENT=development

# Feature Flags
AGENTICFLOW_ENABLE_VECTOR_MEMORY=true
AGENTICFLOW_ENABLE_MCP_INTEGRATION=true
AGENTICFLOW_ENABLE_A2A_COMMUNICATION=true
AGENTICFLOW_ENABLE_WORKFLOW_ANALYTICS=true

# =============================================================================
# Notes:
# =============================================================================
# 1. Only set the API keys you actually need
# 2. For Ollama, ensure the service is running locally
# 3. Vector stores require separate setup of the respective services
# 4. Database backends require the database server to be running
# 5. Most settings have sensible defaults and are optional
# 6. See README.md for detailed configuration instructions
# =============================================================================